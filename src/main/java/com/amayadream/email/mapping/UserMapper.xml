<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.amayadream.email.dao.IUserDao" >
  <resultMap id="BaseResultMap" type="com.amayadream.email.pojo.User" >
    <id column="ID" property="id" />
    <result column="USERNAME" property="username" />
    <result column="PASSWORD" property="password" />
    <result column="EMAIL" property="email" />
    <result column="FIRSTTIME" property="firsttime" />
    <result column="LASTTIME" property="lasttime" />
    <result column="AVAILABLE" property="available" />
  </resultMap>

  <sql id="Base_Column_List" >
    ID, USERNAME, PASSWORD, EMAIL, FIRSTTIME, LASTTIME, AVAILABLE
  </sql>

  <select id="selectAllUser" resultMap="BaseResultMap">
    SELECT <include refid="Base_Column_List" />
    FROM
      (
        SELECT A.*,ROWNUM RN
        FROM (
          SELECT * FROM USERS
          ORDER BY ID DESC
        ) A
      )
    WHERE RN BETWEEN #{startRow} AND #{endRow}
  </select>

  <select id="selectUserById" resultMap="BaseResultMap" parameterType="int" >
    SELEC
    <include refid="Base_Column_List" />
    FROM USERS
    WHERE ID = #{id}
  </select>

  <select id="selectUserByUsername" resultMap="BaseResultMap" parameterType="string">
    SELECT
    <include refid="Base_Column_List" />
    FROM USERS
    WHERE USERNAME = #{username}
  </select>

  <select id="selectAvailable" resultMap="BaseResultMap" parameterType="string">
    SELECT AVAILABLE FROM USERS
    WHERE USERNAME = #{username}
  </select>

  <select id="countUser" resultMap="BaseResultMap">
    SELECT COUNT(ID) ID FROM USERS
  </select>

  <insert id="insertUser" parameterType="java.util.Map" >
    INSERT INTO USERS (ID, USERNAME, PASSWORD, EMAIL ,FIRSTTIME, AVAILABLE)
    VALUES (seq_users_id.nextval, #{username}, #{password}, #{email}, #{firsttime}, #{available})
  </insert>

  <update id="updateLastTime" parameterType="java.util.Map">
    UPDATE USERS
    SET LASTTIME = #{lasttime}
    WHERE USERNAME = #{username}
  </update>

  <update id="updateAvailable" parameterType="java.util.Map">
    UPDATE USERS
    SET AVAILABLE = #{available}
    WHERE ID = #{id}
  </update>

  <update id="updateUser" parameterType="java.util.Map">
    UPDATE USERS
      SET USERNAME = #{username}, PASSWORD = #{password}, EMAIL = #{email}
    WHERE id = #{id}
  </update>

  <delete id="deleteUser" parameterType="int" >
    DELETE FROM USERS
    WHERE ID = #{id}
  </delete>

</mapper>